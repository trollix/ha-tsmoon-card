{
  "name": "lovelace-card-boilerplate",
  "version": "0.1.1",
  "description": "Lovelace card boilerplate",
  "main": "dist/my-custom-card.js",
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "release": "rollup --environment release -c",
    "test": "jest",
    "test+debug": "SET DEBUG_MODE=1&&jest",
    "watch": "rollup -c --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.comtrollix/ha-tmoon-card.git"
  },
  "keywords": [
    "lovelace",
    "card",
    "boilerplate",
    "home",
    "assistant"
  ],
  "author": "Trollix",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trollix/ha-tmoon-card/issues"
  },
  "homepage": "https://github.com/trollix/ha-tmoon-card#readme",
  "jest": {
    "preset": "ts-jest",
    "runner": "jest-electron/runner",
    "testEnvironment": "jest-electron/environment",
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "verbose": false,
    "setupFilesAfterEnv": [
      "<rootDir>/dist/my-custom-card.js"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/jest": "^27.0.3",
    "jest": "^24.9.0",
    "jest-electron": "^0.1.12",
    "rollup": "^2.29.0",
    "rollup-plugin-import-css": "^3.0.2",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-version-injector": "^1.3.3",
    "ts-jest": "^24.3.0",
    "tslib": "^2.0.2",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "lit": "^2.0.2"
  }
}
